<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogDatos"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_skin" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/closeData"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/dialog_skin_white"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/TextPrimaQuincenal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Prima Quincenal:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#2472b5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textPrimaQuincenal"
                    style="@style/informationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/textboxskin"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:textColor="#818084"
                    android:textSize="12sp" >

                </TextView>
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Prima Mensual:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#2472b5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textPrimaMensual"
                    style="@style/informationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/textboxskin"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:textColor="#818084"
                    android:textSize="12sp" >

                </TextView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="10dp" >

                <TextView
                    android:id="@+id/TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Prima Total Anual:"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#2472b5"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textPrimaAnual"
                    style="@style/informationText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:background="@drawable/textboxskin"
                    android:paddingBottom="7dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:textColor="#818084"
                    android:textSize="12sp" >

                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_below="@+id/linearLayout1" >
    </FrameLayout>

    <ImageButton
        android:id="@+id/closeData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:background="@null"
        android:padding="5dp"
        android:onClick="onClick"
        android:src="@drawable/btn_cerrarunpressed" />

    <FrameLayout
        android:layout_width="2dp"
        android:layout_height="2dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" >

    </FrameLayout>

</RelativeLayout>