<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screenbackground"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/img_navbar"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            style="@style/titleText"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:text="ProspecciÃ³n"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="7dp"
            android:src="@drawable/menubuttonskin" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/relativeLayout1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/prospeccion_p1" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/prospeccion_p2" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/prospeccion_p3" />

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/prospeccion_p4" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>