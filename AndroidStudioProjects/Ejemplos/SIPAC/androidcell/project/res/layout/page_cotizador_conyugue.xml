<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFEFEEED"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <CheckBox
                android:id="@+id/conyugeCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CÃ³nyuge"
                android:textColor="#000000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/conyugeSexo"
                style="@style/blackinfotext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Edad:"
                android:textColor="#000000"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/conyugeAge"
                style="@style/blackforminput"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:maxLength="2"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/cotizadorrow"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="#2472B5"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <TextView
                style="@style/cotizadorheadertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Coberturas"
                android:textColor="#ffffff" />

            <TextView
                style="@style/cotizadorheadertext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Suma Asegurada"
                android:textColor="#ffffff" />

            <TextView
                style="@style/cotizadorheadertext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Prima Anual"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <CheckBox
                android:id="@+id/bacyCheck"
                style="@style/blackinfotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:enabled="false"
                android:text="BACY"
                android:textColor="#000000"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/bacySuma"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/bacyPrima"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:maxLength="8"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />
        </LinearLayout>

        <View style="@style/Divider" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <CheckBox
                android:id="@+id/gfcCheck"
                style="@style/blackinfotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:enabled="false"
                android:text="GFC"
                android:textColor="#000000"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/gfcSuma"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:maxLength="8"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/gfcPrima"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:enabled="false"
                android:maxLength="8"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />
        </LinearLayout>

        <View style="@style/Divider" />
        
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="10dp" >

            <CheckBox
                android:id="@+id/gpcCheck"
                style="@style/blackinfotext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="false"
                android:enabled="false"
                android:text="GPC"
                android:textColor="#000000"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/gpcSuma"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:inputType="numberDecimal"
                android:maxLength="9"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />

            <EditText
                android:id="@+id/gpcPrima"
                style="@style/blackforminput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:enabled="false"
                android:maxLength="8"
                android:paddingBottom="7dp"
                android:paddingLeft="14dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:textSize="10sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>