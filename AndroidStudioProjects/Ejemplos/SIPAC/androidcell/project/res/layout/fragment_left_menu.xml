<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/background_menu_slide_skin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <!--
       <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:background="@drawable/background_menu_slide_skin"
    android:orientation="vertical" >
        -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btn_perfil_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/perfil_btn_slide_skin" />

            <TextView
                android:id="@+id/textView1"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_perfil_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="Perfil" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btn_consulta_cartera_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/cartera_btn_slide_skin" />

            <TextView
                android:id="@+id/TextView01"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_consulta_cartera_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="Consulta" />

            <TextView
                android:id="@+id/TextView06"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextView01"
                android:layout_centerHorizontal="true"
                android:text="de cartera" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView02"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_cotizacion_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="Cotizador" />

            <ImageButton
                android:id="@+id/btn_cotizacion_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/cotizacion_btn_slide_skin" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView03"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_prospeccion_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="Prospección" />

            <ImageButton
                android:id="@+id/btn_prospeccion_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/prospeccion_btn_slide_skin" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView04"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_geolocalizacion_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Geolocalización" />

            <ImageButton
                android:id="@+id/btn_geolocalizacion_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/localizacion_btn_slide_skin" />
        </RelativeLayout>
        
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView04"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_actualizar_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:text="Actualizar" />

            <ImageButton
                android:id="@+id/btn_actualizar_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="backupData"
                android:src="@drawable/actualizacionbuttonskin" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/TextView05"
                style="@style/titleMenuSlide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/btn_salir_slide"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-8dp"
                android:text="Salir" />

            <ImageButton
                android:id="@+id/btn_salir_slide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@null"
                android:onClick="onMenuButtonClick"
                android:src="@drawable/salir_btn_slide_skin" />
        </RelativeLayout>
    </LinearLayout>

</ScrollView>