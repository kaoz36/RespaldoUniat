<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  
    android:background="@drawable/screenbackground">
    
    <LinearLayout 
        android:orientation="horizontal" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content"
        android:background="@drawable/navbarskin"
        android:gravity="center_vertical"
        >
        <Button  android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:background="@drawable/backbuttonskin"
            android:onClick="onClickHandler"/>
        <TextView android:text="Resultados" style="@style/titleText"/>
    </LinearLayout>
    
    <TextView
        	android:id="@+id/resultHeader"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:textSize="26dp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:gravity="center_horizontal"
	        android:textColor="#849ECE"
	        android:background="#FFF0F0F0"
        />
    
    
    <ListView
        android:id="@+id/polizaList"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:divider="#FFFFFF"
        android:dividerHeight="0dp"
        >

	</ListView>

</LinearLayout>