<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center_vertical"
    android:paddingRight="0dp"
    android:paddingLeft="0dp"
    android:background="@drawable/polizaitembackground">
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:paddingTop="17dp"
        >
        <TextView
        android:id="@+id/idPoliza"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:paddingLeft="5dp"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
        android:paddingLeft="10dp"
        android:text="Póliza"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
    </LinearLayout>
    <View android:layout_height="fill_parent"
        android:layout_width="4dp" 
        android:background="#4972B1" />
     <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        >
        <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
        android:text="Nombre"
         android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         
         <TextView
        android:id="@+id/retenedor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#5479B6"
         android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
        android:text="Retenedor"
         android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         
          <TextView
        android:id="@+id/positivonegativo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000000"
         android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
         android:gravity="center"
        android:text="Prima"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         
    </LinearLayout>
    <View android:layout_height="fill_parent"
        android:layout_width="4dp" 
        android:background="#4972B1" />
    
     <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="2"
        >
        <TextView
        android:id="@+id/rfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
         android:gravity="center"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
         android:gravity="center"
        android:text="R.F.C."
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         
         <TextView
        android:id="@+id/uniPago"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#5479B6"
         android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
         android:gravity="center"
        android:text="No. de Empleado"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         
        <TextView
        android:id="@+id/quincena"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
         <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#849ECE"
        android:textSize="12dp"
         android:gravity="center"
        android:text="Última quincena de cobro"
        android:layout_gravity="center_vertical"
        android:textIsSelectable="false" />
    </LinearLayout>
    <View android:layout_height="fill_parent"
        android:layout_width="4dp" 
        android:background="#4972B1" />
    
    <LinearLayout 
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="1"
        >
        <ImageView android:src="@drawable/btn_next_unpressed"
            android:layout_height="wrap_content"  
            android:layout_width="wrap_content"
             android:layout_gravity="center_vertical|center_horizontal"/>
        
    </LinearLayout>

    

</LinearLayout>