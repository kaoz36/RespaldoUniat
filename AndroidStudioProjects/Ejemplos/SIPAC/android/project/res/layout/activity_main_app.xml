    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
     >

	<FrameLayout 
	    android:id="@+id/menuLayout"
   	    android:layout_width="wrap_content"
   	    android:layout_height="match_parent"  >
